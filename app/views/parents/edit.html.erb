<div class="container">
   <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8 text-center">
         <a href="/courses" class="btn btn-primary">Parent Edit</a>
         <a href="/sessions/logout" data-method="delete" class="btn btn-primary">Logout</a>
      </div>
      <div class="col-md-2"></div>
   </div>
   <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
         <form action="/parents/<%= current_parent.id %>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="hidden" name="_method" value="patch">

            <div class="form-group">
               <label for="first_name">First Name:</label>
               <input type="text" name="parent[first_name]" value="<%= @parent.first_name.titleize %>" class="form-control" />
            </div>

            <div class="form-group">
               <label for="last_name">Last Name:</label>
               <input type="text" name="parent[last_name]"  value="<%= @parent.last_name.titleize %>" class="form-control" />
            </div>

            <div class="form-group">
               <label for="email">Email:</label>
               <input type="text" name="parent[email]" value="<%= @parent.email %>" class="form-control" />
            </div>

            <div class="form-group">
               <label for="inputPassword">Password</label>
               <input type="password" id="inputPassword" class="form-control" value="<%= @parent.password %>" name="parent[password]" required>
            </div>

            <div class="form-group">
               <label for="password_confirmation">Password Confirmation</label>
               <input type="password" name="parent[password_confirmation]" id="password_confirmation" value="<%= @parent.password %>" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">Update</button>
         </form>
      </div>
      <div class="col-md-2"></div>
   </div>
</div>
