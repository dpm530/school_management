<div class="container mb-4 pb-4">
   <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
         <div class="card card-signin my-5">
         <div class="card-body">
            <h5 class="card-title text-center">New Parent</h5>
            <form action="/parents" method="post" enctype="multipart/form-data">
               <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
               <div class="form-group">
                  <label for="first_name">First Name</label>
                  <input type="text" name="parent[first_name]" id="first_name" class="form-control">
               </div>
               <div class="form-group">
                  <label for="last_name">Last Name</label>
                  <input type="text" name="parent[last_name]" id="last_name" class="form-control">
               </div>
               <div class="form-group">
                  <label for="email">Email</label>
                  <input type="text" name="parent[email]" id="email" class="form-control">
               </div>
               <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" name="parent[password]" id="password" class="form-control">
               </div>
               <div class="form-group">
                  <label for="password_confirmation">Password Confirmation</label>
                  <input type="password" name="parent[password_confirmation]" id="password_confirmation" class="form-control">
               </div>
               <div class="form-group">
                  <label for="image">Profile Picture</label>
                  <input type="file" name="parent[image]" multiple>
               </div>

               <% if current_guest %>
                  <a href="#" class="btn btn-lg btn-primary btn-block text-uppercase disabled">Create</a>
               <% end %>
               <% if current_administrator %>
                  <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create</button>
               <% end %>
            </form>
            </div>
         </div>
      </div>
   </div>
</div>

