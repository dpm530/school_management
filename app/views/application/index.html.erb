      <!-- Guest Modal -->
      <div class="modal" id="myModal">
         <div class="modal-dialog">
            <div class="modal-content p-3">

               <div class="modal-header">
                  <h4 class="modal-title">Guest Access</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
               </div>

               <div class="modal-body">
                  <form action="/sessions/login/guest" method="post">
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                     <div class="form-group">
                        <label for="login">Username:</label>
                        <input type="text" name="login" placeholder="Guest" value="admin" class="form-control">
                     </div>
                     <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" placeholder="****" value="1234" class="form-control">
                     </div>
                     <button type="submit" class="btn btn-outline-primary btn-block">Sign In</button>
                  </form>
               </div>

            </div>
         </div>
      </div>
