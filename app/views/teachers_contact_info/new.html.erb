<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <div class="row">
         <div class="col-3"></div>
         <div class="col-6 text-center">
            <h1>New Teacher Contact Info</h1>
            <a href="/teachers" class="btn btn-primary">Teacher Dashboard</a>
            <a href="/teachers_contact_info" class="btn btn-primary">Contact Information</a>
            <a href="/logout" data-method="delete" class="btn btn-primary">Logout</a>
         </div>
         <div class="col-3"></div>
      </div>
      <br>
      <div class="row">
         <div class="col-md-1"></div>
         <div class="col-md-10">
            <form action="/teachers_contact_info/<%= @teacher.id %>" method="post">
               <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
               <div class="form-group">
                  <label for="line_1_address">Address Line 1</label>
                  <input type="text" name="teacher_contact_info[line_1_address]" id="line_1_address" class="form-control">
               </div>
               <div class="form-group">
                  <label for="line_2_address">Adress Line 2</label>
                  <input type="text" name="teacher_contact_info[line_2_address]" id="line_2_address" class="form-control">
               </div>
               <div class="form-group">
                  <label for="city">City</label>
                  <input type="text" name="teacher_contact_info[city]" id="city" class="form-control">
               </div>
               <div class="form-group">
                  <label for="state">State</label>
                  <input type="text" name="teacher_contact_info[state]" id="student_contact_info" class="form-control">
               </div>
               <div class="form-group">
                  <label for="zipcode">Zipcode</label>
                  <input type="text" name="teacher_contact_info[zipcode]" id="student_contact_info" class="form-control">
               </div>
               <div class="form-group">
                  <label for="mobile_number">Phone Number</label>
                  <input type="integer" name="teacher_contact_info[mobile_number]" id="student_contact_info" class="form-control">
               </div>
               <button type="submit" class="btn btn-outline-success">Create</button>
            </form>
         </div>
         <div class="col-md-1"></div>
      </div>
      <br>
   </body>
</html>
