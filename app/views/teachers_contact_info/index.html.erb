<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <div class="row">
         <div class="col-3"></div>
         <div class="col-6 text-center">
            <h1>Teacher Contact Info</h1>
            <a href="/teachers" class="btn btn-primary">Teacher Dashboard</a>
            <a href="/teachers_contact_info/new" class="btn btn-primary">New Contact Info</a>
            <a href="/logout" data-method="delete" class="btn btn-primary">Logout</a>
         </div>
         <div class="col-3"></div>
      </div>
      <br>
      <div class="row">
         <div class="col-md-2"></div>
         <div class="col-md-8 text-center">
            <table class="table table-bordered">
               <thead>
                  <tr>
                     <th>Address</th>
                     <th>City</th>
                     <th>State</th>
                     <th>Zipcode</th>
                     <th>Action</th>
                  </tr>
               </thead>
               <tbody>
                  <% @teacher_contact.each do |teacher| %>
                     <tr>
                        <td><%= teacher.line_1_address %> <%= teacher.line_2_address%></td>
                        <td><%= teacher.city %></td>
                        <td><%= teacher.state %></td>
                        <td><%= teacher.zipcode %></td>
                        <td>
                           <a href="/teachers_contact_info/<%= teacher.id %>/edit" class="btn btn-success">Edit</a>
                           <a href="/teachers_contact_info/<%= teacher.id %>" class="btn btn-danger" data-method="delete">Delete</a>
                        </td>
                     </tr>
                  <% end %>
               </tbody>
            </table>
         </div>
         <div class="col-md-2"></div>
      </div>
   </body>
</html>
