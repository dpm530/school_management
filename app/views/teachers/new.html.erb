

      <div class="tab-pane container active pt-2" id="new-teacher">
         <div class="container mb-4 pb-4">
            <div class="row">
               <div class="col-md-8 mx-auto">
                  <div class="card card-signin my-5">
                     <div class="card-body">
                        <h5 class="card-title text-center">New Teacher</h5>
                        <form class="form-signin" action="/teachers" method="post" enctype="multipart/form-data">
                           <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

                           <div class="form-label-group">
                              <input type="text" name="teacher[first_name]" id="first_name" placeholder="First Name" class="form-control">
                              <label for="first_name">First Name</label>
                           </div>
                           <div class="form-label-group">
                              <input type="text" name="teacher[last_name]" id="last_name" placeholder="Last Name" class="form-control">
                              <label for="last_name">Last Name</label>
                           </div>

                           <div class="form-label-group">
                              <input type="text" id="inputEmail" class="form-control" placeholder="Email" name="teacher[email]" required autofocus>
                              <label for="inputEmail">Email</label>
                           </div>

                           <div class="form-label-group">
                              <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="teacher[password]" required>
                              <label for="inputPassword">Password</label>
                           </div>

                           <div class="form-label-group">
                              <input type="password" name="teacher[password_confirmation]" id="password_confirmation" placeholder="Password" class="form-control">
                              <label for="password_confirmation">Password Confirmation</label>
                           </div>

                           <div class="form-group">
                              <label for="image">Profile Picture</label>
                              <input type="file" name="teacher[image]" multiple>
                           </div>

                           <div class="custom-control custom-checkbox mb-3">
                              <input type="checkbox" class="custom-control-input" id="customCheck1">
                              <label class="custom-control-label" for="customCheck1">Remember password</label>
                           </div>
                           <% if current_guest %>
                           <a href="#" class="btn btn-lg btn-primary btn-block text-uppercase disabled">Create</a>
                           <% end %>
                           <% if current_administrator %>
                           <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create</button>
                           <% end %>
                        </form>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>


