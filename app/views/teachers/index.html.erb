            <div class="container">
               <% @teachers.each do |teacher| %>
                  <h3><%= teacher.first_name.capitalize %> <%= teacher.last_name.capitalize %></h3>
                  <hr>
               <% end %>
            </div>
         </div>
         <div class="col-3"></div>
      </div>
   </body>
</html>
