<div class="container mb-4 pb-4">
   <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
         <div class="card card-signin my-5">
         <div class="card-body">
            <h5 class="card-title text-center">Edit Teacher Account</h5>
               <form class="form-signin" action="/teachers/<%= @teacher.id %>" method="post" enctype="multipart/form-data">
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                  <input type="hidden" name="_method" value="patch">

                  <div class="form-label-group">
                     <input type="text" name="teacher[first_name]" id="first_name" placeholder="First Name" value="<%= @teacher.first_name.titleize %>" class="form-control">
                     <label for="first_name">First Name</label>
                  </div>

                  <div class="form-label-group">
                     <input type="text" name="teacher[last_name]" id="last_name" placeholder="Last Name" value="<%= @teacher.last_name.titleize %>" class="form-control">
                     <label for="last_name">Last Name</label>
                  </div>

                  <div class="form-label-group">
                     <input type="text" id="inputEmail" class="form-control" placeholder="Email" name="teacher[email]" value="<%= @teacher.email %>" required autofocus>
                     <label for="inputEmail">Email</label>
                  </div>

                  <div class="form-label-group">
                     <input type="password" id="inputPassword" class="form-control" placeholder="Password" value="<%= @teacher.password %>" name="teacher[password]" required>
                     <label for="inputPassword">Password</label>
                  </div>

                  <div class="form-label-group">
                     <input type="password" name="teacher[password_confirmation]" id="password_confirmation" value="<%= @teacher.password %>" placeholder="Password" class="form-control">
                     <label for="password_confirmation">Password Confirmation</label>
                  </div>

                  <div class="form-group">
                     <label for="image">Profile Picture</label>
                     <input type="file" name="teacher[image]" multiple>
                  </div>

                  <div class="custom-control custom-checkbox mb-3">
                     <input type="checkbox" class="custom-control-input" id="customCheck1">
                     <label class="custom-control-label" for="customCheck1">Remember password</label>
                  </div>
                  <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create</button>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>

