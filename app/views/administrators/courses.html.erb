<!-- Courses Section -->
<div class="tab-pane container active" id="courses">
   <div class="row pt-2">
      <div class="col-md-12">
         <h1>Listing Courses</h1>
      </div>
   </div>
   <div class="row mb-4">
      <div class="col-md-12">
         <ul class="nav bg-light border">
            <li class="nav-item">
               <a class="nav-link" href="/courses/new"><i class="fas fa-plus-circle"></i> New Course</a>
            </li>
         </ul>
      </div>
   </div>
   <div class="row">
      <div class="col-md-12">
         <table class="table table-bordered table-hover">
            <thead>
               <tr>
                  <th>Name</th>
                  <th>Subject</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Students Enrolled</th>
                  <th>Actions</th>
               </tr>
            </thead>
            <tbody>
               <% @courses.each do |course| %>
                  <tr>
                     <td><%= course.name.capitalize %></td>
                     <td><%= course.subject.capitalize %></td>
                     <td><%= course.start_date.strftime("%B %d %Y") %></td>
                     <td><%= course.end_date.strftime("%B %d %Y") %></td>
                     <td><%= course.students.length %></td>
                     <% if current_administrator %>
                        <td>
                           <a href="/courses/<%= course.id %>" class="btn btn-primary"><i class="far fa-arrow-alt-circle-right"></i> Details</a>
                           <a href="/courses/<%= course.id %>/edit" class="btn btn-success"><i class="far fa-edit"></i> Edit</a>
                           <a href="/courses/<%= course.id %>" data-method="delete" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                     <% else %>
                        <td>
                           <a href="/courses/<%= course.id %>" class="btn btn-primary"><i class="far fa-arrow-alt-circle-right"></i> Details</a>
                           <a href="/courses/<%= course.id %>/edit" class="btn btn-success disabled"><i class="far fa-edit"></i> Edit</a>
                           <a href="/courses/<%= course.id %>" data-method="delete" class="btn btn-danger disabled"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                     <% end %>
                  </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
</div>
<!-- Courses Section End -->
