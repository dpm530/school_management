<!-- Parents Section -->
<div class="tab-pane container active" id="parents">
   <div class="row pt-2">
      <div class="col-md-12">
         <h1>Listing Parents</h1>
      </div>
   </div>
   <div class="row mb-4">
      <div class="col-md-12">
         <ul class="nav bg-light border">
            <li class="nav-item">
               <a class="nav-link" href="/parents/new"><i class="fas fa-plus-circle"></i> New Parent</a>
            </li>
         </ul>
      </div>
   </div>
   <div class="row">
      <div class="col-md-12">
         <table class="table table-bordered table-hover">
            <thead>
               <tr>
                  <th>Picture</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Student Name</th>
                  <th>Actions</th>
               </tr>
            </thead>
            <tbody>
               <% @parents.each do |parent| %>
                  <tr>
                     <td><%= image_tag(parent.image_url(:profile).to_s) %></td>
                     <td><%= parent.first_name.capitalize %></td>
                     <td><%= parent.last_name.capitalize %></td>
                     <td><%= parent.email %></td>
                     <td>
                        <% if parent.student %>
                           <%= parent.student.first_name.capitalize %>
                        <% end %>
                     </td>
                     <td>
                        <a href="/parents/<%= parent.id %>" class="btn btn-primary"><i class="far fa-arrow-alt-circle-right"></i> Details</a>
                        <% if current_guest %>
                           <a href="/parents/<%= parent.id %>/edit" class="btn btn-success disabled"><i class="far fa-edit"></i> Edit</a>
                           <a href="/parents/<%= parent.id %>" class="btn btn-danger disabled" data-method="delete"><i class="fas fa-trash"></i> Delete</a>
                        <% end %>
                        <% if current_administrator %>
                           <a href="/parents/<%= parent.id %>/edit" class="btn btn-success"><i class="far fa-edit"></i> Edit</a>
                           <a href="/parents/<%= parent.id %>" class="btn btn-danger" data-method="delete"><i class="fas fa-trash"></i> Delete</a>
                        <% end %>
                     </td>
                  </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
</div>
<!-- Parents Section End -->
