<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>

      <div class="d-flex" id="wrapper">

         <!-- Sidebar Section -->
         <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Open-School</div>
            <div class="list-group list-group-flush">
               <a href="#dashboard" data-toggle="tab" class="list-group-item list-group-item-action">Dashboard</a>
               <a href="#teachers" data-toggle="tab" class="list-group-item list-group-item-action">Teachers</a>
               <a href="#students" data-toggle="tab" class="list-group-item list-group-item-action">Students</a>
               <a href="#courses" data-toggle="tab" class="list-group-item list-group-item-action">Classes</a>
               <a href="#assignments" data-toggle="tab" class="list-group-item list-group-item-action">Assignments</a>
               <a href="#attendance" data-toggle="tab" class="list-group-item list-group-item-action">Attendance</a>
               <a href="#gradebook" data-toggle="tab" class="list-group-item list-group-item-action">Gradebook</a>
            </div>
         </div>
         <!-- Sidebar Section End -->

         <!-- Page Content Section -->
         <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
               <button class="btn btn-outline-primary btn-sm" id="menu-toggle"><i class="fas fa-bars"></i></button>

               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
               </button>

               <div class="collapse navbar-collapse" id="navbarSupportedContent">

                  <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                     <li class="nav-item active">
                        <a class="nav-link" href="#"><i class="fas fa-bell"></i></a>
                     </li>
                     <li class="nav-item border-right pr-2">
                        <a class="nav-link" href="#"><i class="fas fa-envelope"></i></a>
                     </li>
                     <li class="nav-item dropdown pl-1">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <%=current_administrator.login%> <i class="fas fa-user-circle"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                           <a class="dropdown-item" href="#">Profile</a>
                           <a class="dropdown-item" href="#">Settings</a>
                           <div class="dropdown-divider"></div>
                           <a class="dropdown-item" href="/sessions/logout" data-method="delete">Logout</a>
                        </div>
                     </li>
                  </ul>

               </div>
            </nav>

            <div class="tab-content container-fluid">

               <!-- Dashboard Section -->
               <div class="tab-pane container active pt-2" id="dashboard">
                  <div class="row">
                     <div class="col-md-12">
                        <ul class="breadcrumb">
                           <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                           <li class="breadcrumb-item active">Overview</li>
                        </ul>
                     </div>
                  </div>
                  <div class="row pt-3 pb-4">
                     <div class="col-lg-3 col-md-6 mb-5 mb-lg-0 mx-auto">
                        <a href="#" class="card border-0 shadow-lg" style="border-radius:0.5rem; background-color: #28a745; color: #fff; position: relative; padding-top: 1.5rem; padding-bottom: 1.5rem;">
                           <div class="card-body d-flex align-items-end flex-column text-right pr-4">
                              <h4 style="font-weight:700;font-size: 2rem;"><%= @courses.length %></h4>
                              <p class="w-75" style="color: rgba(255,255,255,.7); font-weight: 600;">Total Classes</p>
                              <i class="fas fa-chalkboard" style="position: absolute; top: 50%; transform: translateY(-50%); font-size: 4rem; left: 1rem; color: rgba(255,255,255,.2);"></i>
                           </div>
                        </a>
                     </div>
                     <div class="col-lg-3 col-md-6 mb-5 mb-lg-0 mx-auto">
                        <a href="#" class="card border-0 shadow-lg" style="border-radius:0.5rem; background-color: #dd3d31; color: #fff; position: relative; padding-top: 1.5rem; padding-bottom: 1.5rem;">
                           <div class="card-body d-flex align-items-end flex-column text-right pr-4">
                              <h4 style="font-weight:700;font-size: 2rem;"><%= @teachers.length %></h4>
                              <p class="w-75" style="color: rgba(255,255,255,.7); font-weight: 600;">Total Teachers</p>
                              <i class="fas fa-chalkboard-teacher" style="position: absolute; top: 50%; transform: translateY(-50%); font-size: 4rem; left: 1rem; color: rgba(255,255,255,.2);"></i>
                           </div>
                        </a>
                     </div>
                     <div class="col-lg-3 col-md-6 mb-5 mb-lg-0 mx-auto">
                        <a href="#" class="card border-0 shadow-lg" style="border-radius:0.5rem; background-color: #2092ed; color: #fff; position: relative; padding-top: 1.5rem; padding-bottom: 1.5rem;">
                           <div class="card-body d-flex align-items-end flex-column text-right pr-4">
                              <h4 style="font-weight:700;font-size: 2rem;"><%= @students.length %></h4>
                              <p class="w-75" style="color: rgba(255,255,255,.7); font-weight: 600;">Total Students</p>
                              <i class="fas fa-user-graduate" style="position: absolute; top: 50%; transform: translateY(-50%); font-size: 4rem; left: 1rem; color: rgba(255,255,255,.2);"></i>
                           </div>
                        </a>
                     </div>
                     <div class="col-lg-3 col-md-6 mb-5 mb-lg-0 mx-auto">
                        <a href="#" class="card border-0 shadow-lg" style="border-radius:0.5rem; background-color: #fdb800; color: #fff; position: relative; padding-top: 1.5rem; padding-bottom: 1.5rem;">
                           <div class="card-body d-flex align-items-end flex-column text-right pr-4">
                              <h4 style="font-weight:700;font-size: 2rem;">0</h4>
                              <p class="w-75" style="color: rgba(255,255,255,.7); font-weight: 600;">Events</p>
                              <i class="fas fa-calendar-alt" style="position: absolute; top: 50%; transform: translateY(-50%); font-size: 4rem; left: 1rem; color: rgba(255,255,255,.2);"></i>
                           </div>
                        </a>
                     </div>
                  </div>
                  <div class="row py-4">
                     <div class="col-md-12 mx-auto">
                        <div id="articles">
                           <h1 id="month">
                              <%= link_to "<", date: @date.prev_month %>
                              <%= @date.strftime("%B %Y") %>
                              <%= link_to ">", date: @date.next_month %>
                           </h1>
                           <%= calendar do |date| %>
                              <%= date.day %>
                           <% end %>
                        </div>
                     </div>
                  </div>
               </div>
               <!-- Dashboard Section End -->

               <!-- Teachers Section -->
               <div class="tab-pane container fade" id="teachers">
                  <div class="row pt-2">
                     <div class="col-md-12">
                        <h1>Teachers</h1>
                     </div>
                  </div>
                  <div class="row mb-4">
                     <div class="col-md-12">
                        <ul class="nav bg-light border">
                           <li class="nav-item">
                              <a class="nav-link" href="/teachers/new">Create</a>
                           </li>
                        </ul>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-12">
                        <table class="table table-bordered table-hover">
                           <thead>
                              <tr>
                                 <th>First Name</th>
                                 <th>Last Name</th>
                                 <th>Email</th>
                                 <th>Classes</th>
                                 <th>Actions</th>
                              </tr>
                           </thead>
                           <tbody>
                              <% @teachers.each do |teacher| %>
                                 <tr>
                                    <td><%= teacher.first_name.capitalize %></td>
                                    <td><%= teacher.last_name.capitalize %></td>
                                    <td><%= teacher.email %></td>
                                    <td><%= teacher.courses.length %></td>
                                    <% if current_administrator %>
                                       <td>
                                          <a href="/teachers/<%= teacher.id %>" class="btn btn-primary">Details</a>
                                          <a href="/teachers/<%= teacher.id %>/edit" class="btn btn-success">Edit</a>
                                          <a href="/teachers/<%= teacher.id %>" data-method="delete" class="btn btn-danger">Delete</a>
                                       </td>
                                    <% else %>
                                       <td>
                                          <a href="/teachers/<%= teacher.id %>" class="btn btn-primary">Details</a>
                                          <a href="/teachers/<%= teacher.id %>/edit" class="btn btn-success disabled">Edit</a>
                                          <a href="/teachers/<%= teacher.id %>" data-method="delete" class="btn btn-danger disabled">Delete</a>
                                       </td>
                                    <% end %>
                                 </tr>
                              <% end %>
                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
               <!-- Teachers Section End -->

               <!-- Students Section -->
               <div class="tab-pane container fade" id="students">
                  <div class="row pt-2">
                     <div class="col-md-12">
                        <h1>Students</h1>
                     </div>
                  </div>
                  <div class="row mb-4">
                     <div class="col-md-12">
                        <ul class="nav bg-light border">
                           <li class="nav-item">
                              <a class="nav-link" href="#">Create</a>
                           </li>
                        </ul>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-12">
                        <table class="table table-bordered table-hover">
                           <thead>
                              <tr>
                                 <th>First Name</th>
                                 <th>Last Name</th>
                                 <th>Username</th>
                                 <th>Grade</th>
                                 <th>Classes</th>
                                 <th>Actions</th>
                              </tr>
                           </thead>
                           <tbody>
                              <% @students.each do |student| %>
                                 <tr>
                                    <td><%= student.first_name.capitalize %></td>
                                    <td><%= student.last_name.capitalize %></td>
                                    <td><%= student.username %></td>
                                    <td><%= student.grade_level %></td>
                                    <td><%= student.courses.length %></td>
                                    <% if current_administrator %>
                                       <td>
                                          <a href="/students/<%= student.id %>" class="btn btn-primary">Details</a>
                                          <a href="/students/<%= student.id %>/edit" class="btn btn-success">Edit</a>
                                          <a href="/students/<%= student.id %>" data-method="delete" class="btn btn-danger">Delete</a>
                                       </td>
                                    <% else %>
                                       <td>
                                          <a href="/students/<%= student.id %>" class="btn btn-primary">Details</a>
                                          <a href="/students/<%= student.id %>/edit" class="btn btn-success disabled">Edit</a>
                                          <a href="/students/<%= student.id %>" data-method="delete" class="btn btn-danger disabled">Delete</a>
                                       </td>
                                    <% end %>
                                 </tr>
                              <% end %>
                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
               <!-- Students Section End -->

               <!-- Courses Section -->
               <div class="tab-pane container fade" id="courses">
                  <div class="row pt-2">
                     <div class="col-md-12">
                        <h1>Classes</h1>
                     </div>
                  </div>
                  <div class="row mb-4">
                     <div class="col-md-12">
                        <ul class="nav bg-light border">
                           <li class="nav-item">
                              <a class="nav-link" href="/courses/new">Create</a>
                           </li>
                        </ul>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-12">
                        <table class="table table-bordered table-hover">
                           <thead>
                              <tr>
                                 <th>Name</th>
                                 <th>Subject</th>
                                 <th>Start Date</th>
                                 <th>End Date</th>
                                 <th>Students Enrolled</th>
                                 <th>Actions</th>
                              </tr>
                           </thead>
                           <tbody>
                              <% @courses.each do |course| %>
                                 <tr>
                                    <td><%= course.name.capitalize %></td>
                                    <td><%= course.subject.capitalize %></td>
                                    <td><%= course.start_date.strftime("%B %d %Y") %></td>
                                    <td><%= course.end_date.strftime("%B %d %Y") %></td>
                                    <td><%= course.students.length %></td>
                                    <% if current_administrator %>
                                       <td>
                                          <a href="/courses/<%= course.id %>" class="btn btn-primary">Details</a>
                                          <a href="/courses/<%= course.id %>/edit" class="btn btn-success">Edit</a>
                                          <a href="/courses/<%= course.id %>" data-method="delete" class="btn btn-danger">Delete</a>
                                       </td>
                                    <% else %>
                                       <td>
                                          <a href="/courses/<%= course.id %>" class="btn btn-primary">Details</a>
                                          <a href="/courses/<%= course.id %>/edit" class="btn btn-success disabled">Edit</a>
                                          <a href="/courses/<%= course.id %>" data-method="delete" class="btn btn-danger disabled">Delete</a>
                                       </td>
                                    <% end %>
                                 </tr>
                              <% end %>
                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
               <!-- Courses Section End -->

               <!-- Assignments Section -->
               <div class="tab-pane container fade" id="assignments">
                  <div class="row py-2">
                     <div class="col-md-12">
                        <h1>Assignments</h1>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-12">
                        <% @courses.each do |course| %>
                        <div class="card my-2">
                           <div class="card-header">
                              <h5><a href="/assignments/<%= course.id %>"><%= course.name.capitalize %></a></h5>
                           </div>
                           <% if (course.assignments) %>
                           <div class="card-body">
                              <table class="table table-hover">
                                 <thead>
                                    <tr>
                                       <th>Name</th>
                                       <th>Description</th>
                                       <th>Due Date</th>
                                       <th>Date Assigned</th>
                                       <th>Actions</th>
                                    </tr>
                                 </thead>
                                 <tbody>
                                    <% course.assignments.each do |assignment| %>
                                    <tr>
                                       <td><%= assignment.name.capitalize %></td>
                                       <td><%= assignment.description %></td>
                                       <td><%= assignment.due_date.strftime("%B %d %Y") %></td>
                                       <td><%= assignment.date_assigned.strftime("%B %d %Y") %></td>
                                       <td><a href="#" class="btn">Action</a></td>
                                    </tr>
                                    <% end %>
                                 </tbody>
                              </table>
                           </div>
                           <% end %>
                        </div>
                        <% end %>
                     </div>
                  </div>
               </div>
               <!-- Assignments Section End -->

               <!-- Attendance Section -->
               <div class="tab-pane container fade" id="attendance">
                  <div class="row py-2">
                     <div class="col-md-12">
                        <h1>Attendance</h1>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-12">
                        <% @courses.each do |course| %>
                        <div class="card my-2">
                           <div class="card-header">
                              <h5><%= course.name.capitalize %></h5>
                           </div>

                           <% if (course.attendances) %>
                           <div class="card-body">
                              <table class="table table-hover">
                                 <thead>
                                    <tr>
                                       <th>Date</th>
                                       <th>Actions</th>
                                    </tr>
                                 </thead>
                                 <tbody>
                                    <% course.attendances.each do |attendance| %>
                                    <tr>
                                       <td><%= attendance.date.strftime("%B %d %Y") %></td>
                                       <td><a href="#" class="btn">Action</a></td>
                                    </tr>
                                    <% end %>
                                 </tbody>
                              </table>
                           </div>
                           <% end %>

                        </div>
                        <% end %>
                     </div>
                  </div>
               </div>
               <!-- Attendance Section End -->

               <!-- Gradebook Section -->
               <div class="tab-pane container fade" id="gradebook">
                  <div class="row py-2">
                     <div class="col-md-12">
                        <h1>Grades</h1>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-12">
                        <% @courses.each do |course| %>
                           <div class="card my-2">
                              <div class="card-header">
                                 <h5><%= course.name.capitalize %></h5>
                              </div>
                              <div class="card-body">
                                 <table class="table table-hover">
                                    <thead>
                                       <tr>
                                          <th>Students Enrolled</th>
                                          <th>Grade Average</th>
                                          <th>Actions</th>
                                       </tr>
                                    </thead>
                                    <tbody>
                                       <tr>
                                          <td><%= course.students.length %></td>
                                          <td><%= course.gradebooks.average(:number_score) %></td>
                                          <td><a href="#" class="btn">Action</a></td>
                                       </tr>
                                    </tbody>
                                 </table>
                              </div>
                           </div>
                        <% end %>
                     </div>
                  </div>
               </div>
               <!-- Gradebook Section End -->



            </div>


         </div>
         <!-- Page Content Section End -->

      </div>



      <script>
        $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
        });
      </script>
   </body>
</html>
