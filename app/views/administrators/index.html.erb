<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <div class="d-flex" id="wrapper">

        <!-- Sidebar Section -->
        <div class="bg-light border-right" id="sidebar-wrapper">
          <div class="sidebar-heading">School Management</div>
          <div class="list-group list-group-flush">
            <a href="#dashboard" data-toggle="tab" class="list-group-item list-group-item-action">Dashboard</a>
            <a href="#teachers" data-toggle="tab" class="list-group-item list-group-item-action">Teachers</a>
            <a href="#students" data-toggle="tab" class="list-group-item list-group-item-action">Students</a>
            <a href="#courses" data-toggle="tab" class="list-group-item list-group-item-action">Courses</a>
            <!-- <a href="#gradebook" data-toggle="tab" class="list-group-item list-group-item-action">Gradebook</a>
            <a href="#assignments" data-toggle="tab" class="list-group-item list-group-item-action">Assignments</a>
            <a href="#attendance" data-toggle="tab" class="list-group-item list-group-item-action">Attendance</a> -->
          </div>
        </div>
        <!-- Sidebar Section End -->

        <!-- Page Content Section -->
        <div id="page-content-wrapper">

          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

               <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                  <li class="nav-item active">
                     <a class="nav-link" href="#"><i class="fas fa-bell"></i></a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link" href="#"><i class="fas fa-envelope"></i></a>
                  </li>
                  <li class="nav-item dropdown">
                     <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle"></i>
                     </a>
                     <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Profile</a>
                        <a class="dropdown-item" href="#">Settings</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/sessions/logout" data-method="delete">Logout</a>
                     </div>
                  </li>
               </ul>

            </div>
          </nav>

         <div class="tab-content container-fluid">
            <div class="tab-pane container active" id="dashboard"> DASHBOARD</div>

            <!-- Teachers Section -->
            <div class="tab-pane container fade" id="teachers">
               <div class="row">
                  <div class="col-md-12">
                     <table class="table table-hover">
                        <thead>
                           <tr>
                              <th>Firstname</th>
                              <th>Lastname</th>
                              <th>Email</th>
                              <th>Action</th>
                           </tr>
                        </thead>
                        <tbody>
                           <% @teachers.each do |teacher| %>
                              <tr>
                                 <td><%= teacher.first_name.capitalize %></td>
                                 <td><%= teacher.last_name.capitalize %></td>
                                 <td><%= teacher.email %></td>
                                 <td><button type="button" name="button" class="btn btn-primary">Something</button></td>
                              </tr>
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <!-- Teachers Section End -->

            <!-- Students Section -->
            <div class="tab-pane container fade" id="students">
               <div class="row">
                  <div class="col-md-12">
                     <table class="table table-hover">
                        <thead>
                           <tr>
                              <th>Firstname</th>
                              <th>Lastname</th>
                              <th>Username</th>
                              <th>Grade</th>
                           </tr>
                        </thead>
                        <tbody>
                           <% @students.each do |student| %>
                              <tr>
                                 <td><%= student.first_name.capitalize %></td>
                                 <td><%= student.last_name.capitalize %></td>
                                 <td><%= student.username %></td>
                                 <td><%= student.grade_level %></td>
                              </tr>
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <!-- Students Section End -->


            <!-- Courses Section -->
            <div class="tab-pane container fade" id="courses">
               <div class="row">
                  <div class="col-md-12">
                     <table class="table table-hover">
                        <thead>
                           <tr>
                              <th>Name</th>
                              <th>Subject</th>
                              <th>Start Date</th>
                              <th>End Date</th>
                           </tr>
                        </thead>
                        <tbody>
                           <% @courses.each do |course| %>
                              <tr>
                                 <td><%= course.name.capitalize %></td>
                                 <td><%= course.subject.capitalize %></td>
                                 <td><%= course.start_date.strftime("%B %d %Y") %></td>
                                 <td><%= course.end_date.strftime("%B %d %Y") %></td>
                              </tr>
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <!-- Courses Section End -->

            <!-- <div class="tab-pane container fade" id="gradebook">GRADEBOOK</div>
            <div class="tab-pane container fade" id="assignments">ASSIGNMENTS</div>
            <div class="tab-pane container fade" id="attendance">ATTENDANCE</div> -->
         </div>


        </div>
        <!-- Page Content Section End -->

      </div>



      <script>
        $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
        });
      </script>
   </body>
</html>
