<div class="container border py-2 shadow p-4 mb-4 bg-white">
   <div class="row">
      <div class="col-md-12 text-center">
         <h1><%= @course.name.capitalize %></h1>
      </div>
   </div>
   <div class="row mb-4">
      <div class="col-md-12">
         <ul class="nav bg-light border">
            <li class="nav-item">
               <a class="nav-link" href="/assignments/new/<%= @course.id %>"><i class="fas fa-plus-circle"></i> New Assignment</a>
            </li>
         </ul>
      </div>
   </div>
   <div class="row">
      <div class="col-md-12">
         <h3>Assignments:</h3>
      </div>
   </div>
   <hr>
   <div class="row px-2">
      <div class="col-md-12">
         <% if @assignments %>
            <% @assignments.each do |assignment|%>
               <h5><strong><u><%= assignment.name %></u></strong></h5>
               <h6><strong>Date Assigned:</strong> <%= assignment.date_assigned %></h6>
               <h6><strong>Due Date:</strong> <%= assignment.due_date %></h6>
               <h6><strong>Description:</strong></h6>
               <p><%= assignment.description %></p>
               <% if current_guest %>
                  <a href="/assignments/<%= assignment.id %>/edit" class="btn btn-primary disabled">Edit</a>
                  <a href="/assignments/<%= assignment.id %>" class="btn btn-danger disabled" data-method="delete">Delete</a>
               <% end %>
               <% if current_administrator %>
                  <a href="/assignments/<%= assignment.id %>/edit" class="btn btn-primary">Edit</a>
                  <a href="/assignments/<%= assignment.id %>" class="btn btn-danger" data-method="delete">Delete</a>
               <% end %>
               <hr>
            <% end %>
         <% end %>
      </div>
   </div>
</div>
