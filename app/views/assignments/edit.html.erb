
      <div class="container">
         <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 text-center">
               <a href="/administrators" class="btn btn-primary">Home</a>
               <a href="/sessions/logout" data-method="delete" class="btn btn-primary">Logout</a>
            </div>
            <div class="col-md-2"></div>
         </div>
         <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
               <form action="/assignments/<%= @assignment.id %>" method="post">
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                  <input type="hidden" name="_method" value="patch">

                  <div class="form-group">
                     <label for="name">Name:</label>
                     <input type="text" name="assignment[name]" value="<%= @assignment.name.titleize %>" class="form-control" />
                  </div>

                  <div class="form-group">
                     <label for="description">Description:</label>
                     <textarea class="form-control" name="assignment[description]" rows="8" cols="80"><%= @assignment.description %></textarea>
                  </div>

                  <div class="form-group">
                     <label for="date_assigned">Date Assigned:</label>
                     <input type="date" name="assignment[date_assigned]" placeholder="<%= @assignment.date_assigned %>" class="form-control" />
                  </div>

                  <div class="form-group">
                     <label for="due_date">Due Date:</label>
                     <input type="date" name="course[due_date]" placeholder="<%= @assignment.due_date %>" class="form-control" />
                  </div>

                  <button type="submit" class="btn btn-success">Update</button>
               </form>
            </div>
            <div class="col-md-2"></div>
         </div>
      </div>
   
