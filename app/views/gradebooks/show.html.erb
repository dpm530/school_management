<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <div class="container">
         <div class="row">
            <div class="col-md-12 text-center">
               <h1>Gradebook Show</h1>
               <a href="/courses" class="btn btn-primary">Course Dashboard</a>
               <a href="/logout" data-method="delete" class="btn btn-primary">Logout</a>
               <h2>
                  Student: <%= @student.first_name.capitalize %> <%= @student.last_name.capitalize %> <%= @student.id %>
               </h2>
               <h2>
                  Course: <%= @course.name.capitalize %>
               </h2>

            </div>
         </div>
         <hr>
         <div class="row">
            <div class="col-md-4">
               <h2>Grades:</h2>
               <% unless @grades.empty? %>
                  <% @grades.each do |grade| %>
                     <%= grade.letter_score %>
                     <%= grade.number_score %>
                  <% end %>
               <% end %>
            </div>
            <div class="col-md-8">
               <form action="/<%= @student.id %>/<%= @course.id %>" method="post">
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                  <div class="form-group">
                     <label for="letter_score">Grade:</label>
                     <input type="text" name="gradebook[letter_score]" class="form-control">
                  </div>
                  <div class="form-group">
                     <label for="number_score">Numerical Score:</label>
                     <input type="integer" name="gradebook[number_score]" class="form-control">
                  </div>
                  <div class="form-group">
                     <label for="comment">Comments:</label>
                     <textarea name="gradebook[comment]" rows="8" cols="80"></textarea>
                  </div>
                  <div class="form-group">
                     <label for="session">Academic Session:</label>
                     <select class="form-control" name="gradebook[session]" id="session">
                        <option></option>
                        <option>Spring</option>
                        <option>Summer</option>
                        <option>Fall</option>
                        <option>Winter</option>
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="year">Year:</label>
                     <select class="form-control" name="gradebook[year]" id="year">
                        <option></option>
                        <option>2019</option>
                        <option>2020</option>
                        <option>2021</option>
                        <option>2022</option>
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="start_date">Start Date:</label>
                     <input type="date" name="gradebook[start_date]" class="form-control">
                  </div>
                  <div class="form-group">
                     <label for="end_date">End Date:</label>
                     <input type="date" name="gradebook[end_date]" class="form-control">
                  </div>
                  <button type="submit" class="btn btn-outline-success">Submit</button>
               </form>
            </div>
         </div>
      </div>
   </body>
</html>
