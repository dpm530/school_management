<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <div class="container">
         <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 text-center">
               <a href="/administrators" class="btn btn-primary">Home</a>
               <a href="/sessions/logout" data-method="delete" class="btn btn-primary">Logout</a>
            </div>
            <div class="col-md-2"></div>
         </div>
         <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
               <h1>Edit</h1>
               <form action="/gradebooks/<%= @student.id %>/<%= @course.id %>" method="post">
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                  <div class="form-group">
                     <label for="letter_score">Grade:</label>
                     <select class="form-control" id="letter_score" name="gradebook[letter_score]" >
                        <option></option>
                        <option>A</option>
                        <option>B</option>
                        <option>C</option>
                        <option>D</option>
                        <option>F</option>
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="number_score">Numerical Score:</label>
                     <select class="form-control" id="number_score" name="gradebook[number_score]" >
                        <option></option>
                        <option>100</option>
                        <option>90</option>
                        <option>80</option>
                        <option>70</option>
                        <option>60</option>
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="comment">Comments:</label>
                     <textarea name="gradebook[comment]" rows="8" cols="80"></textarea>
                  </div>
                  <div class="form-group">
                     <label for="session">Academic Session:</label>
                     <select class="form-control" name="gradebook[session]" id="session">
                        <option></option>
                        <option>Spring</option>
                        <option>Summer</option>
                        <option>Fall</option>
                        <option>Winter</option>
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="year">Year:</label>
                     <select class="form-control" name="gradebook[year]" id="year">
                        <option></option>
                        <option>2019</option>
                        <option>2020</option>
                        <option>2021</option>
                        <option>2022</option>
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="start_date">Start Date:</label>
                     <input type="date" name="gradebook[start_date]" class="form-control">
                  </div>
                  <div class="form-group">
                     <label for="end_date">End Date:</label>
                     <input type="date" name="gradebook[end_date]" class="form-control">
                  </div>
                  <button type="submit" class="btn btn-outline-success">Submit</button>
               </form>
            </div>
            <div class="col-md-2"></div>
         </div>
      </div>
   </body>
</html>
