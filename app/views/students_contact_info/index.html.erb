            </div>
         </div>
         <div class="row pt-2">
            <% @student_contact.each do |student| %>
               <div class="col-md-4">
                  <div class="card">
                     <div class="card-body">
                        <p class="card-text"><%= student.line_1_address %> <%= student.line_2_address%></p>
                        <p class="card-text"><%= student.city %>, <%= student.state %> <%= student.zipcode %></p>
                        <p class="card-text">Phone Number: <%= student.mobile_number %></p>
                        <a href="/students_contact_info/<%= student.id %>/edit" class="btn btn-success">Edit</a>
                        <a href="/students_contact_info/<%= student.id %>" class="btn btn-danger" data-method="delete">Delete</a>
                     </div>
                  </div>
               </div>
            <% end %>
         </div>
