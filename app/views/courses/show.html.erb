<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

         <a class="navbar-brand" href="/administrators">Open-School</a>

         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
               <li class="nav-item active">
                  <a class="nav-link" href="#"><i class="fas fa-bell"></i></a>
               </li>
               <li class="nav-item border-right pr-2">
                  <a class="nav-link" href="#"><i class="fas fa-envelope"></i></a>
               </li>
               <% if current_administrator %>
                  <li class="nav-item dropdown pl-1">
                     <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                         <%=current_administrator.login.capitalize %> <i class="fas fa-user-circle"></i>
                     </a>
                     <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/administrators/<%= current_administrator.id %>">Profile</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/sessions/logout" data-method="delete">Logout</a>
                     </div>
                  </li>
               <% end %>
               <% if current_guest %>
                  <li class="nav-item dropdown pl-1">
                     <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                         Guest <i class="fas fa-user-circle"></i>
                     </a>
                     <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="">Profile</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/sessions/logout" data-method="delete">Logout</a>
                     </div>
                  </li>
               <% end %>
            </ul>
         </div>
      </nav>

      <div class="container">
         <div class="row">
            <div class="col-md-12 col-md-8 border shadow p-4 my-4 bg-white">
               <h1>Course</h1>
               <div class="row mb-4">
                  <div class="col-md-12">
                     <ul class="nav bg-light border">
                        <li class="nav-item">
                           <a class="nav-link" href="">Assignments</a>
                        </li>
                     </ul>
                  </div>
               </div>
               <table class="table table-bordered my-4">
                  <thead>
                     <tr>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                     </tr>
                  </thead>
                  <tbody>
                     <tr>
                        <td><%= @course.name.capitalize %></td>
                        <td><%= @course.subject.capitalize %></td>
                        <td><%= @course.start_date %></td>
                        <td><%= @course.end_date %></td>
                     </tr>
                  </tbody>
               </table>
            </div>
         </div>
      </div>

      <div class="container">
         <div class="row">
            <div class="col-md-12 col-md-8 border shadow p-4 my-4 bg-white">
               <h1>Course Teachers</h1>
               <div class="row mb-4">
                  <div class="col-md-12">
                     <ul class="nav bg-light border">
                        <li class="nav-item">
                           <a class="nav-link" href="" data-toggle="modal" data-target="#addTeacher">Add Teacher</a>
                        </li>
                     </ul>
                  </div>
               </div>
               <table class="table table-bordered my-4">
                  <thead>
                     <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Action</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% if @teacher_courses %>
                        <% @teacher_courses.each do |course| %>
                           <tr>
                              <td><%= course.teacher.first_name.capitalize %></td>
                              <td><%= course.teacher.last_name.capitalize %></td>
                              <td><%= course.teacher.email %></td>
                              <td><%= course.id %></td>
                              <td>
                                 <% if current_guest %>
                                    <a href="/teacher_courses/<%= course.id %>/delete" class="btn btn-danger disabled" data-method="delete">Remove</a>
                                 <% end %>
                                 <% if current_administrator%>
                                    <a href="/teacher_courses/<%= course.id %>/delete" class="btn btn-danger" data-method="delete">Remove</a>
                                 <% end %>
                              </td>
                           </tr>
                        <% end %>
                     <% end %>
                  </tbody>
               </table>

               <h1>Course Students</h1>
               <div class="row mb-4">
                  <div class="col-md-12">
                     <ul class="nav bg-light border">
                        <li class="nav-item">
                           <a class="nav-link" href="" data-toggle="modal" data-target="#addStudent">Add Student</a>
                        </li>
                     </ul>
                  </div>
               </div>
               <table class="table table-bordered my-4">
                  <thead>
                     <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Username</th>
                        <th>Grade</th>
                        <th>Action</th>
                     </tr>
                  </thead>
                  <tbody>
                     <% if @student_courses %>
                        <% @student_courses.each do |course| %>
                           <tr>
                              <td><%= course.student.first_name.capitalize %></td>
                              <td><%= course.student.last_name.capitalize %></td>
                              <td><%= course.student.username %></td>
                              <td><%= course.student.grade_level %></td>
                              <td>
                                 <% if current_guest %>
                                    <a href="/student_courses/<%= course.id %>/delete" class="btn btn-danger disabled" data-method="delete">Remove</a>
                                 <% end %>
                                 <% if current_administrator %>
                                    <a href="/student_courses/<%= course.id %>/delete" class="btn btn-danger" data-method="delete">Remove</a>
                                 <% end %>
                              </td>
                           </tr>
                        <% end %>
                     <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>

      <!-- Add Teacher Modal -->
      <div class="modal" id="addTeacher">
         <div class="modal-dialog">
            <div class="modal-content">

               <div class="modal-header">
                  <h4 class="modal-title">Add Teacher</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
               </div>

               <div class="modal-body">
                  <form action="/teacher_courses/<%= @course.id %>" method="post">
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                     <div class="form-group">
                        <select class="form-control" name="email" id="email">
                           <option></option>
                           <% @teachers.each do |teacher|%>
                              <% if !(@teacher_course.include? teacher) %>
                                 <option value="<%= teacher.email %>"><%= teacher.first_name.capitalize %> <%= teacher.last_name.capitalize %></option>
                              <% end %>
                           <% end %>
                        </select>
                     </div>
                     <% if current_guest %>
                        <a href="#" class="btn btn-outline-success disabled">Add</a>
                     <% end %>
                     <% if current_administrator %>
                        <button type="submit" class="btn btn-outline-success">Add</button>
                     <% end %>
                  </form>
               </div>

               <div class="modal-footer">
               </div>

            </div>
         </div>
      </div>
      <!-- Add Teacher Modal End -->

      <!-- Add Student Modal -->
      <div class="modal" id="addStudent">
         <div class="modal-dialog">
            <div class="modal-content">

               <div class="modal-header">
                  <h4 class="modal-title">Add Student</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
               </div>

               <div class="modal-body">
                  <form action="/student_courses/<%= @course.id %>" method="post">
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                     <div class="form-group">
                        <select class="form-control" name="username" id="username">
                           <option></option>
                           <% @students.each do |student|%>
                              <% if !(@student_course.include? student) %>
                              <option value="<%= student.username %>"><%= student.first_name.capitalize %> <%= student.last_name.capitalize %></option>
                              <% end %>
                           <% end %>
                        </select>
                     </div>
                     <% if current_guest %>
                        <a href="#" class="btn btn-outline-success disabled">Add</a>
                     <% end %>
                     <% if current_administrator %>
                        <button type="submit" class="btn btn-outline-success">Add</button>
                     <% end %>
                  </form>
               </div>

               <div class="modal-footer">
               </div>

            </div>
         </div>
      </div>
      <!-- Add Student Modal End -->

      <footer class="conatiner-fluid" style="background-color:#eee;padding-top:25px;padding-bottom:10px;">
         <div class="container">
            <div class="row">
               <div class="col-1"></div>
               <div class="col-md-10 text-center">
                  <p> &copy; Open-School 2019. All Rights Reserved.</p>
               </div>
               <div class="col-1"></div>
            </div>
         </div>
      </footer>

   </body>
</html>
