<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <br>
      <div class="container">
         <div class="row">
            <div class="col-3"></div>
            <div class="col-6 text-center">
               <a href="/courses" class="btn btn-primary">Course Dashboard</a>
               <a href="/assignments/<%= @course.id %>" class="btn btn-primary">Assignment</a>
               <a href="/logout" data-method="delete" class="btn btn-primary">Logout</a>
            </div>
            <div class="col-3"></div>
         </div>
         <br>
         <div class="row">
            <div class="col-6">
               <div class="container">
                  <h1>Add Teacher to this Course:</h1>
                  <form action="/teacher-course/<%= @course.id %>" method="post">
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                     <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="text" name="email" class="form-control">
                     </div>
                     <button type="submit" class="btn btn-outline-success">Add</button>
                  </form>
               </div>
               <br>
               <div class="container">
                  <h1>Add Student to this Course:</h1>
                  <form action="/student-course/<%= @course.id %>" method="post">
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                     <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" name="username" class="form-control">
                     </div>
                     <button type="submit" class="btn btn-outline-success">Add</button>
                  </form>
               </div>
            </div>
            <div class="col-6 text-center">
               <div class="container">
                  <h1>Teacher:</h1>
                  <h2>
                     <% if @teacher_course %>
                        <% @teacher_course.each do |teacher| %>
                           <%= teacher.first_name.capitalize %> <%= teacher.last_name.capitalize %> <br>
                        <% end %>
                     <% end %>
                  </h2>
               </div>
               <hr>
               <div class="container">
                  <h2>Name: <%= @course.name.capitalize %></h2>
                  <h2>Subject: <%= @course.subject.capitalize %></h2>
                  <h2>Start Date: <%= @course.start_date %></h2>
                  <h2>End Date: <%= @course.end_date %></h2>
                  <h2>End Date: <%= @course.id %></h2>
               </div>
               <a href="/attendances/<%= @course.id %>" class="btn btn-primary">Attendance</a>
               <hr>
               <div class="container">
                  <h1>Students in this class:</h1>
                  <h2>
                     <% if @student_course %>
                        <% @student_course.each do |student| %>
                           <%= student.first_name.capitalize %> <%= student.last_name.capitalize %> <%= student.id %> <br>
                        <% end %>
                     <% end %>
                  </h2>
               </div>
               <br>
            </div>
         </div>
      </div>
      <br>
   </body>
</html>
