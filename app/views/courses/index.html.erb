<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>
      <div class="row">
         <div class="col-3"></div>
         <div class="col-6 text-center">
            <h1>Courses Index</h1>
            <a href="/teachers" class="btn btn-primary">Teacher Dashboard</a>
            <a href="/courses/new" class="btn btn-primary">Add Course</a>
            <a href="/logout" data-method="delete" class="btn btn-primary">Logout</a>
         </div>
         <div class="col-3"></div>
      </div>
      <br>
      <div class="row">
         <div class="col-3"></div>
         <div class="col-6 text-center">
            <div class="container">
               <% @courses.each do |course| %>
                  <a href=" /courses/<%= course.id %> "> <%= course.name %> </a>
                  <%= course.subject %>
                  <%= course.start_date %>
                  <%= course.end_date %>
                  <br>
               <% end %>
            </div>
         </div>
         <div class="col-3"></div>
      </div>
   </body>
</html>
