<%= form_for student do |f| %>
   <div>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
   </div>

   <div>
      <%= f.label :last_name %>
      <%= f.text_area :last_name %>
   </div>

   <div>
      <%= f.label :image %>
      <%= f.file_field :image %>
   </div>

   <%= f.submit %>
<% end %>
