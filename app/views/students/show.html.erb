<div class="container border py-2 shadow p-4 mb-4 bg-white">
   <div class="row">
      <div class="col-md-6">
         <div class="row">
            <div class="col-md-12">
               <h1>Profile:</h1>
            </div>
         </div>
         <hr>
         <div class="row">
            <div class="col-md-4 mb-2 text-center">
               <div class="border py-4">
                  <%= image_tag(@student.image_url(:profile).to_s) %>
               </div>
            </div>
         </div>
         <hr>
         <div class="row">
            <div class="col-md-10">
               <p><strong>Name:</strong> <%= @student.first_name.capitalize %> <%= @student.last_name.capitalize %></p>
               <hr>
               <p><strong>Username:</strong> <%= @student.username %></p>
               <hr>
               <p><strong>Grade:</strong> <%= @student.grade_level %></p>
               <hr>
            </div>
         </div>
      </div>
      <div class="col-md-6 border-left">
         <div class="row">
            <div class="col-md-10">
               <h1>Contact Information:</h1>
               <% if @contact %>
               <p><strong>Address Line 1:</strong> <%= @contact.line_1_address %></p>
               <p><strong>Address Line 2:</strong> <%= @contact.line_2_address %></p>
               <p><strong>City:</strong> <%= @contact.city %></p>
               <p><strong>State:</strong> <%= @contact.state %></p>
               <p><strong>Zipcode:</strong> <%= @contact.zipcode %></p>
               <a href="/students_contact_info/<%= @contact.id %>/edit" class="btn btn-primary">Edit</a>
               <a href="/students_contact_info/<%= @contact.id %>" data-method="delete" class="btn btn-danger">Delete</a>
               <% end %>
            </div>
         </div>
      </div>
   </div>
</div>

<div class="container border py-2 shadow p-4 mb-4 bg-white">
   <div class="row">
      <div class="col-md-6">
         <h1>Courses</h1>
      </div>
   </div>
   <div class="row">
      <div class="col-md-12">
         <table class="table table-hover">
            <thead>
               <tr>
                  <th>Course</th>
                  <th>Subject</th>
                  <th>Start Date</th>
                  <th>End Date</th>
               </tr>
            </thead>
            <tbody>
               <% if @courses %>
                  <% @courses.each do |course| %>
                     <tr>
                        <td><%= course.name.capitalize %></td>
                        <td><%= course.subject.capitalize%></td>
                        <td><%=  course.start_date %></td>
                        <td><%= course.end_date %></td>
                     </tr>
                  <% end %>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
</div>
