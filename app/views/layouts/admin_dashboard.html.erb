<!DOCTYPE html>
<html>
   <head>
      <title>SchoolManagement</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   </head>

   <body>

      <!-- Page Wrapper -->
      <div class="d-flex" id="wrapper">

         <!-- Sidebar Section -->
         <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Open-School</div>
            <div class="list-group list-group-flush">
               <a href="#dashboard" data-toggle="tab" class="list-group-item list-group-item-action active">Dashboard</a>
               <a href="#teachers" data-toggle="tab" class="list-group-item list-group-item-action">Teachers</a>
               <a href="#students" data-toggle="tab" class="list-group-item list-group-item-action">Students</a>
               <a href="#parents" data-toggle="tab" class="list-group-item list-group-item-action">Parents</a>
               <a href="#courses" data-toggle="tab" class="list-group-item list-group-item-action">Courses</a>
               <a href="#assignments" data-toggle="tab" class="list-group-item list-group-item-action">Assignments</a>
               <a href="#gradebook" class="list-group-item list-group-item-action">Gradebook</a>
               <!-- <a href="#attendance" data-toggle="tab" class="list-group-item list-group-item-action">Attendance</a> -->
            </div>
         </div>
         <!-- Sidebar Section End -->

         <!-- Page Content Section -->
         <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
               <button class="btn btn-outline-primary btn-sm" id="menu-toggle"><i class="fas fa-bars"></i></button>

               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
               </button>

               <div class="collapse navbar-collapse" id="navbarSupportedContent">

                  <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                     <li class="nav-item border-right pr-2">
                        <a class="nav-link" href="#"><i class="fas fa-envelope"></i></a>
                     </li>
                     <li class="nav-item dropdown pl-1">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <%= current_user.login.capitalize %> <i class="fas fa-user-circle"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                           <a class="dropdown-item" href="/administrators/<%= current_user.id %>">Profile</a>
                           <div class="dropdown-divider"></div>
                           <a class="dropdown-item" href="/sessions/logout" data-method="delete">Logout</a>
                        </div>
                     </li>

                  </ul>

               </div>
            </nav>

            <div class="tab-content container-fluid">
               <%= yield %>
            </div>

         </div>
         <!-- Page Content Section End -->

      </div>
      <!-- Page Wrapper End -->

      <script>
        $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
        });
      </script>

   </body>
</html>
